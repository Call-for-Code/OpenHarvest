{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": "strongloop",
    "parserOptions": { 
        "ecmaVersion": 10,
        "sourceType": "module"
    },
    "rules": {
        "quotes": ["error", "double", { "allowTemplateLiterals": true }],
        "indent": ["error", 4],
        "max-len": ["error", 200],
        "no-unused-vars": "off"
    }

}
